                <span class="shopcart__product-price" data-shopcart-product-price></span>
            </section>
            <form data-shopcart-form>
               <button type="submit" class="shopcart__product-input-button plus" data-shopcart-product-input-button>+</button>
               <input class="shopcart__product-input" type="number" data-shopcart-product-input>
               <button type="submit" class="shopcart__product-input-button minus" data-shopcart-product-input-button>-</button>
            </form>
         </div>
      </template>
      <div class="shopcart__product-container" data-shopcart-product-container></div>
      <div class="shopcart__totals">
         <span>total</span>
         <span data-shopcart-total></span>
      </div>
      <a class="shopcart__link-checkout" href="/checkout">checkout</a>
   </div>
   <div class="notification-block" data-notification-block>
      <div class="notification__container" data-notification-container></div>
      <template data-notification-template>
         <span class="notification" data-notification>
            <div class="notification__icon-check">
               <i class="fa-solid fa-circle-check"></i>
            </div>
            <button class="notification__icon-cross" data-notification-icon-cross>
               <i class="fa-solid fa-xmark"></i>
            </button>
            "<span class="notification__name" data-notification-name></span>" was added To cart
