   <div class="shopcart" data-shopcart>
      <div class="shopcart__top-container">
         <span>CART (<span class="shopcart__quantity" data-shopcart-quantity>0</span>)</span>
         <button class="shopcart__button-remove" data-shopcart-button-remove>remove all</button>
      </div>
      <template class="shopcart__template" data-shopcart-template>
         <div class="shopcart__product" data-shopcart-product>
            <div>
               <img class="shopcart__product-img" data-shopcart-product-img src="" alt="">
            </div>
            <section class="shopcart__product-section">
